package pack.controller;

import java.util.Scanner;


import pack.model.PriceInter;

public class MyProcess implements MyInter{
	private PriceInter inter;
	private String sangName;
	private int price;

	
	public MyProcess(PriceInter inter) {
		this.inter = inter;
	}
	
	
	@Override
	public void inputPrice() {
		// 금액 입력 후 MoneyInter type의 클래스를 이용해 금액 단위별 갯수 계산한 결과 얻기
		try {
			Scanner scanner = new Scanner(System.in);
				System.out.print("상품명 : ");
				sangName = scanner.nextLine();
				Scanner scanner2 = new Scanner(System.in);	
				System.out.print("수량: ");
				int suryang = scanner2.nextInt();
				Scanner scanner3 = new Scanner(System.in);	
				System.out.print("단가: ");
				int danga = scanner3.nextInt();
				
				
				price = inter.calcPrice(suryang, danga);
		} catch (Exception e) {
			System.out.println("inputPrice err : " + e.getMessage());
		}
	}
	
	@Override
	public void showResult() {
	
		System.out.println(sangName);
		System.out.println(price);
		
	}

}
